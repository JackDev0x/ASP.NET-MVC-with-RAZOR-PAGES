@model IEnumerable<string>

<div class="d-grid gap-1">
    <a class="btn btn btn-lg btn-outline-primary" asp-action="Index"
       asp-controller="Home" asp-route-category="">
        All
    </a>
    @foreach (string category in Model ?? Enumerable.Empty<string>()) {
        <a class="btn btn-block @(category == ViewBag.SelectedCategorrryy ? "btn-primary" :  "btn-outline-secondary")"
           asp-action="Index" asp-controller="Home"
           asp-route-category="@category"
           asp-route-productPage="1">
            @category
        </a>
    }
</div>