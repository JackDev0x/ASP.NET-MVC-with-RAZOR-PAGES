<!DOCTYPE html>
<html>
<head>
    <style>
        .add-space {
            border: 2px solid blue; 
            border-radius: 10px;
            padding: 10px; 
            text-align: center;
        }

        body {
            background: linear-gradient(to bottom, #f3e5ab, transparent);
            background-attachment: fixed;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>SandstoneStore</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <script>
        // Pobieramy elementy div i listy
        var cartListView = document.getElementById("moj-div");
        var list = document.getElementById("lista");

        // Dodajemy obsługę zdarzenia "mouseover" do div
        mojDiv.addEventListener("mouseover", function () {
            lista.style.display = "block"; // Pokazujemy listę po najechaniu kursorem
        });

        // Dodajemy obsługę zdarzenia "mouseout" do div
        mojDiv.addEventListener("mouseout", function () {
            lista.style.display = "none"; // Ukrywamy listę po opuszczeniu kursora
        });
    </script>




    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">SANDSTONE STORE</span>
    </div>
    <div class="row m-1 p-1"> 
        <div id="categories" class="col-3">
            <vc:navigation-menu />
        </div>
        <div class="col-7">
            @RenderBody()
        </div>
        <div id="preview" class="col-2 add-space">
            <vc:cart-preview />
        </div>
    </div>
</body>
</html>