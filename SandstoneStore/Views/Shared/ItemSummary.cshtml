@model Product


<div class="card card-outline-primary m-1 p-3">
    <div class="bg-faded p-1">
        <h4>
            @Model?.Name
            @if (@Model?.Category == "Sedimentary")
            {
                <a class="btn btn-success btn-sm pull-right" asp-action="Index" asp-route-category="@Model.Category" asp-route-productpage="1">Type: @Model?.Category</a>
            }
            else if (@Model?.Category == "Arenaceous")
            {
                <a class="btn btn-warning btn-sm pull-right" asp-action="Index" asp-route-category="@Model.Category" asp-route-productpage="1">Type: @Model?.Category</a>
            }
            <span class="badge rounded-pill bg-primary text-white" 
                   style="float:right">
                <small>@Model?.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    

    <form id="@Model.ProductId" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <div class="card-text p-1">@Model?.Description</div>
        <button type="submit" class="btn btn-outline-primary btn-sm pull-right btn-rectangle" style="float:right; transition: background-color 0.3s ease;">
            Add to cart
        </button>
    </form>

</div>